<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RavineRepair.HomePage"
    Title="The Ravines">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="SignOutBtn" Text="Sign Out" Clicked="SignOutBtn_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="LightGray">
                <StackLayout>
                    <Label x:Name="welcome" HorizontalOptions="Center" FontAttributes="Bold" Padding="0,0,0,0"/>
                    <Label x:Name="role" HorizontalOptions="Center"/>
                    <Label x:Name="address" HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
            <Frame BorderColor="Black" HasShadow="False">
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="View Your Tickets"/>
                    <Button x:Name="Tickets" Text="Tickets" Clicked="TicketsBtn_Clicked" IsVisible="true"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
